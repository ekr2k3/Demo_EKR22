extend ../../layout/layout.pug
block main-content
    div(class='main w-5/6 bg-orange-100')
        form(action="/admin/setting/general/create" method="POST" enctype="multipart/form-data" class="p-8 w-full max-w-xl mx-auto bg-white rounded-2xl shadow-lg space-y-6 mt-10")

            h2.text-3xl.font-bold.text-center.text-blue-800.mb-6 Cài đặt chung

            //- Website Name
            .form-group
                label(for="websiteName" class="block text-lg font-semibold text-gray-700 mb-1") Tên website
                input#websiteName(type="text" name="websiteName" placeholder="VD: My Awesome Site" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400")

            //- Logo Upload
            .form-group
                label(for="logo" class="block text-lg font-semibold text-gray-700 mb-1") Logo (hình ảnh)
                input#logo(type="file" name="logo" accept="image/*" class="w-full text-sm text-gray-600 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-100 file:text-blue-700 hover:file:bg-blue-200")

            //- Phone
            .form-group
                label(for="phone" class="block text-lg font-semibold text-gray-700 mb-1") Số điện thoại
                input#phone(type="text" name="phone" placeholder="VD: 0987654321" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400")

            //- Address
            .form-group
                label(for="address" class="block text-lg font-semibold text-gray-700 mb-1") Địa chỉ
                input#address(type="text" name="address" placeholder="VD: 123 Đường ABC, Quận 1" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400")

            //- NoCopyright Text
            .form-group
                label(for="nocopyRight" class="block text-lg font-semibold text-gray-700 mb-1") Nội dung bản quyền
                input#nocopyRight(type="text" name="nocopyRight" placeholder="© 2025 by Company" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400")

            //- Submit Button
            .flex.justify-center
                button(type="submit" class="bg-gradient-to-r from-blue-500 to-blue-700 text-white font-semibold py-2 px-6 rounded-xl hover:scale-105 transform transition duration-200") Tạo cài đặt
