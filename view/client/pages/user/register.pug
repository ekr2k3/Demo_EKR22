//- register.pug [client]
extends ../../layout/layout1.pug

block main_1
  .min-h-screen.flex.items-center.justify-center.bg-gradient-to-br.from-blue-100.to-purple-200.p-4
    .bg-white.p-8.rounded-2xl.shadow-xl.w-full.max-w-md
      h2.text-3xl.font-bold.text-center.text-gray-800.mb-2 Đăng ký
      p.text-center.text-gray-500.mb-6 Tạo tài khoản mới để bắt đầu

      //- Hiển thị thông báo lỗi nếu có
      if (messages.error)
        .mb-4.rounded-lg.border.border-red-400.bg-red-100.px-4.py-3.text-red-700.relative
            strong.font-bold Lỗi! 
            |  #{messages.error}

      form(action="/user/register", method="post", class="space-y-5")

        .relative
          label(for="i1", class="block text-sm font-medium text-gray-700 mb-1") Họ và tên
          .flex.items-center.border.border-gray-300.rounded-md.px-3
            svg(class="w-5 h-5 text-gray-400 mr-2", fill="none", stroke="currentColor", viewBox="0 0 24 24")
              path(stroke-linecap="round", stroke-linejoin="round", stroke-width="2", d="M5.121 17.804A12.094 12.094 0 0112 15c2.534 0 4.87.784 6.879 2.117M15 11a3 3 0 11-6 0 3 3 0 016 0z")
            input#i1(type="text", name="fullname", required, placeholder="Nguyễn Văn A", class="w-full py-2 outline-none")

        .relative
          label(for="i2", class="block text-sm font-medium text-gray-700 mb-1") Email
          .flex.items-center.border.border-gray-300.rounded-md.px-3
            svg(class="w-5 h-5 text-gray-400 mr-2", fill="none", stroke="currentColor", viewBox="0 0 24 24")
              path(stroke-linecap="round", stroke-linejoin="round", stroke-width="2", d="M16 12H8m0 0l4-4m-4 4l4 4")
            input#i2(type="email", name="email", required, placeholder="email@example.com", class="w-full py-2 outline-none")

        .relative
          label(for="i3", class="block text-sm font-medium text-gray-700 mb-1") Mật khẩu
          .flex.items-center.border.border-gray-300.rounded-md.px-3
            svg(class="w-5 h-5 text-gray-400 mr-2", fill="none", stroke="currentColor", viewBox="0 0 24 24")
              path(stroke-linecap="round", stroke-linejoin="round", stroke-width="2", d="M12 11c1.657 0 3-1.343 3-3S13.657 5 12 5s-3 1.343-3 3 1.343 3 3 3z")
              path(stroke-linecap="round", stroke-linejoin="round", stroke-width="2", d="M12 11v6m0 0H9m3 0h3")
            input#i3(type="password", name="password", required, placeholder="••••••••", class="w-full py-2 outline-none")

        button(type="submit", class="w-full bg-indigo-600 hover:bg-indigo-700 text-white py-2 rounded-lg font-semibold transition duration-200") Đăng ký
