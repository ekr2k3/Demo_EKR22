//- reset.pug [client]
extends ../../layout/layout1.pug

block main_1
  .min-h-screen.flex.items-center.justify-center.bg-gradient-to-br.from-blue-100.to-purple-200.p-4
    .bg-white.p-8.rounded-2xl.shadow-xl.w-full.max-w-md
      h2.text-3xl.font-bold.text-center.text-gray-800.mb-2 Đăng nhập


      form(action="/user/password/reset", method="post", class="space-y-5")

        .relative
          label(for="i3", class="block text-sm font-medium text-gray-700 mb-1") Mật khẩu mới
          .flex.items-center.border.border-gray-300.rounded-md.px-3
            svg(class="w-5 h-5 text-gray-400 mr-2", fill="none", stroke="currentColor", viewBox="0 0 24 24")
              path(stroke-linecap="round", stroke-linejoin="round", stroke-width="2", d="M12 11c1.657 0 3-1.343 3-3S13.657 5 12 5s-3 1.343-3 3 1.343 3 3 3z")
              path(stroke-linecap="round", stroke-linejoin="round", stroke-width="2", d="M12 11v6m0 0H9m3 0h3")
            input#i3(type="password", name="password", required, placeholder="••••••••", class="w-full py-2 outline-none")
        
        
        button(type="submit", class="w-full bg-indigo-600 hover:bg-indigo-700 text-white py-2 rounded-lg font-semibold transition duration-200") Cập nhập mật khẩu
